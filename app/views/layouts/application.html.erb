<!DOCTYPE html>
<html>
<head>
  <title>DragonflyTutorial</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<div class="navbar">
			<div class="navbar-inner">
				<div class="container">
					<a href="#" class="brand">Awesome new app</a>
				</div>
			</div>
		</div>
		<% if flash[:notice] %>
      <div class="alert alert-info">
  			<a class="close">×</a>
  			<%= flash[:notice] %>
			</div>
    <% end %>
    <% if flash[:error] %>
      <div class="alert alert-error">
  			<a class="close">×</a>
  			<%= flash[:error] %>
			</div>
    <% end %>
    <% if flash[:success] %>
      <div class="alert alert-success">
  			<a class="close">×</a>
  			<%= flash[:success] %>
			</div>
    <% end %>
	<%= yield %>
	</div>
</body>
</html>
